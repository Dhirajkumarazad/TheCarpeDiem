<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D8F0EDED"
    tools:context=".Settings"
    android:padding="20dp">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/info"
      android:text="Information"
      android:textColor="#000000"
      android:textSize="20dp"
      android:layout_marginBottom="70px"
      />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/info"
      android:background="#ffffff"
      android:id="@+id/relative1"
      android:elevation="20dp"
      >

    <RelativeLayout
        android:id="@+id/relate"
        android:layout_width="match_parent"
        android:onClick="about"
        android:layout_height="50dp">


    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info_black_24dp"
        android:id="@+id/img1"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/img1"
        android:layout_marginLeft="50dp"
        android:text="Get to know us"
        android:textSize="15dp"
        android:id="@+id/know_us"
        android:textColor="#000000"
        />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/relate"

        android:background="#000000"
        android:id="@+id/line1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relate2"
        android:layout_below="@id/relate"
        android:onClick="termsandcondn"
        >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ac_unit_black_24dp"
        android:id="@+id/img2"
        android:layout_centerVertical="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:text="Terms and Conditions"
        android:textSize="15dp"
        android:id="@+id/terms"
        android:textColor="#000000"

        />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/relate2"
        android:id="@+id/line2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="privacypolicy"
        android:id="@+id/relate3"
        android:layout_below="@id/relate2">

    <ImageView
        android:id="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ac_unit_black_24dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        android:text="Privacy Policy"

        android:textColor="#000000"
        android:textSize="15dp"

        />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/relate3"

        android:id="@+id/line3"
        />

  </RelativeLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/relative1"
      android:text="Application"
      android:id="@+id/application"
      android:textColor="#000000"
      android:layout_marginTop="90px"
      android:layout_marginBottom="70px"
      android:textSize="20dp"
      />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/application"

      android:background="#ffffff"
      android:id="@+id/relative2"
      android:elevation="20dp"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="rateapp"
        android:id="@+id/relate5">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info_black_24dp"
        android:id="@+id/img5"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Rate the App"
        android:textSize="15dp"
        android:id="@+id/rate"

        android:textColor="#000000"
        android:layout_centerVertical="true"
        />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/relate5"

        android:background="#000000"
        android:id="@+id/line4"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relate6"
        android:onClick="opengmail"
        android:layout_below="@+id/relate5">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ac_unit_black_24dp"
        android:id="@+id/img6"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="50dp"
        android:text="Leave Us a Comment"
        android:textSize="15dp"
        android:id="@+id/comment"
        android:textColor="#000000"
        android:layout_centerVertical="true"

        />
    </RelativeLayout>


  </RelativeLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/relative2"
      android:text="Be a part of us"
      android:id="@+id/app"
      android:textColor="#000000"
      android:layout_marginTop="90px"
      android:layout_marginBottom="70px"
      android:textSize="20dp"
      />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/app"

      android:background="#ffffff"
      android:id="@+id/relative3"
      android:elevation="20dp"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="campusambass"
        android:id="@+id/relate7">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ac_unit_black_24dp"
        android:id="@+id/img7"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Campus Ambassador"
        android:textSize="15dp"
        android:id="@+id/sign_out"
        android:textColor="#000000"
        android:layout_centerVertical="true"

        />
    </RelativeLayout>

  </RelativeLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/relative3"
      android:text="Account"
      android:id="@+id/part"
      android:textColor="#000000"
      android:layout_marginTop="90px"
      android:layout_marginBottom="70px"
      android:textSize="20dp"
      />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/part"
      android:layout_marginBottom="60dp"
      android:background="#ffffff"
      android:id="@+id/relative4"
      android:elevation="20dp"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="signout"
        android:id="@+id/relate8">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ac_unit_black_24dp"
        android:id="@+id/img8"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Sign Out"
        android:textSize="15dp"
        android:id="@+id/be_a_part"
        android:textColor="#000000"
        android:layout_centerVertical="true"

        />
    </RelativeLayout>

  </RelativeLayout>

</RelativeLayout>
</ScrollView>
  <android.support.design.widget.BottomNavigationView
      android:id="@+id/bottom_navigation"
      android:layout_height="wrap_content"
      android:background="@color/colorPrimaryDark"
      android:layout_width="match_parent"
      android:layout_alignParentBottom="true"
      app:menu="@menu/menuourteam"/>

</RelativeLayout>
